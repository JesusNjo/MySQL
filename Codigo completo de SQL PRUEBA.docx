create database usuarios; -- PARA CREAR LA BASE DE DATOS

show databases; -- PARA MOSTRAR TODAS LAS BASES DE DATOS

use usuarios; -- PARA QUE ESTE SELECCIONADA Y EN USO LA BASE DE DATOS SELECCIONADA

create table animales( -- PARA CREAR UNA TABLA

id INT, -- PARA CREAR UN ID CON EL TIPO DE DATO INT (INTEGER)
tipo varchar(255), -- PARA CREAR UN DATO DE TIPO CON DATOS VARCHAR(STRING) CON LONGITUD DE 255
estado varchar(255), -- PARA CREAR UN DATO DE ESTADO CON DATOS VARCHAR(STRING) CON LONGITUD DE 255
PRIMARY KEY(id) -- PARA ASIGNARLE AL ID COMO LLAVE PRINCIPAL DE LA TABLA
);


ALTER TABLE animales MODIFY COLUMN id int auto_increment; -- PARA MODIFICAR UNA TABLA, EN ESTE CASO AGREGARLE EL auto incremento al ID

INSERT INTO animales(tipo,estado) VALUES('Perro','Feliz'); -- PARA CREAR VALORES DE LA TABLA
INSERT INTO animales(tipo,estado) VALUES('Gato','Triste'); -- PARA CREAR VALORES DE LA TABLA
INSERT INTO animales(tipo,estado) VALUES('Tigre','Ansioso'); -- PARA CREAR VALORES DE LA TABLA


SELECT * FROM animales; -- PARA MOSTRAR DATOS CON SUS VALORES
SELECT * FROM animales WHERE id = 1; -- PARA BUSCAR UN DATO ESPECIFICO POR ID
SELECT * FROM animales WHERE estado = 'TRISTE'; -- PARA BUSCAR UN DATO ESPECIFICO POR ESTADO (NO IMPORTA SI ESTA EN MINUSCULAS O MAYUSCULAS)
SELECT * FROM animales WHERE tipo = 'tigre'; -- PARA BUSCAR UN DATO ESPECIFICO POR TIPO (NO IMPORTA SI ESTA EN MINUSCULAS O MAYUSCULAS)
SELECT * FROM animales WHERE estado = 'feliz' AND tipo = 'Perro'; -- PARA BUSCAR DATOS CON DOS VALORES QUE SE RELACIONEN
SELECT * FROM animales WHERE estado = 'TRISTE' OR tipo = 'tigre'; -- PARA BUSCAR DATOS CON UNO U OTRO VALOR, SE IMPRIMIRAN TODOS LOS QUE TENGAN ALGUNO DE ESOS DATOS

UPDATE animales SET estado = 'feliz' where id = 3; -- UPDATE SET PARA ACTUALIZAR O MODIFICAR UN VALOR, EN ESTE CASO LE CAMBIAMOS ANSIODO A FELIZ
UPDATE animales SET id = 2 where id = 4; -- UPDATE SET PARA ACTUALIZAR O MODIFICAR UN VALOR, EN ESTE CASO LE CAMBIAMOS 4 AL 2

DELETE FROM animales where id = 3; -- PARA ELIMINAR EL ANIMALES EN ESTE CASO DE LA FILA 3, ES DECIR TODOS LOS DATOS DE LA FILA
DELETE FROM animales where estado = 'triste' and id = 2; -- PARA ELIMINAR EL ANIMALES EN ESTE CASO DEL ESTADO TRISTE CON EL ID 2

SHOW CREATE TABLE animales; -- PARA MOSTRAR LA CREACION DE UNA TABLA


