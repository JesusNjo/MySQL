use holamundo;

create table productos(
id int NOT NULL auto_increment,
name varchar(50) not null,
create_by int not null,
marca varchar(50) not null,
primary key(id),
foreign key(create_by) references usuarios(id) -- PARA CREAR LLAVES FORANEA, INDICANDO QUE SU REFERENCIA ES LA TABLA DE USUARIOS
);


rename table productos to product; -- PARA RENOMBRAR EL NOMBRE DE LA TABLA


