SELECT u.id, u.email from usuarios u; -- Para poder interactuar con diferentes tablas, le asignamos la U en este caso para poder traer los datos mediante un punto 
SELECT u.id, u.email,p.name from usuarios u left join product p on u.id = p.create_by; -- DE ESTA MANERA UNIMOS LAS TABLAS MEDIANTE EL ID DE USUARIOS CON CREATE_BY DE PRODUCT